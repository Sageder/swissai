{
  "collections": {
    "events": {
      "description": "Master event records with complete hazard information",
      "example_fields": [
        "eventId",
        "name",
        "type",
        "detectedAt",
        "location",
        "coordinates",
        "severity",
        "status",
        "affectedPopulation",
        "description",
        "monitoringData",
        "riskAssessment",
        "scenarioModeling",
        "authoritiesInvolved",
        "resourcesDeployed",
        "infrastructureImpact",
        "publicCommunication",
        "mediaCoordination",
        "evacuationZones",
        "secondaryHazards",
        "weatherConditions",
        "accessibilityStatus"
      ]
    },
    "monitoring_data": {
      "description": "Real-time sensor data from all monitoring systems",
      "example_fields": [
        "sensorId",
        "sensorType",
        "location",
        "readings",
        "timestamp",
        "alertThresholds",
        "dataQuality",
        "batteryStatus",
        "connectivity",
        "calibrationDate",
        "responsibleOrganization"
      ]
    },
    "authorities": {
      "description": "Complete directory of all emergency response organizations",
      "example_fields": [
        "authorityId",
        "name",
        "type",
        "level",
        "jurisdiction",
        "specialization",
        "contact",
        "availableResources",
        "activationProtocols",
        "responseTime",
        "capacity",
        "currentStatus",
        "equipmentInventory",
        "personnelCount"
      ]
    },
    "resources": {
      "description": "Real-time inventory of all emergency resources",
      "example_fields": [
        "resourceId",
        "type",
        "subtype",
        "location",
        "status",
        "capacity",
        "equipment",
        "personnel",
        "availability",
        "deploymentTime",
        "specializations",
        "operatingRadius",
        "currentAssignment"
      ]
    },
    "infrastructure": {
      "description": "Critical infrastructure monitoring and status",
      "example_fields": [
        "infrastructureId",
        "type",
        "location",
        "status",
        "capacity",
        "criticalityLevel",
        "vulnerabilities",
        "backupSystems",
        "maintenanceStatus",
        "affectedServices",
        "evacuationImpact"
      ]
