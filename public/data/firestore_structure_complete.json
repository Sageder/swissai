    "decision_log": {
      "description": "Complete audit trail of all decisions and approvals",
      "example_fields": [
        "decisionId",
        "eventId",
        "decisionType",
        "issuedBy",
        "approvedBy",
        "timestamp",
        "rationale",
        "affectedAreas",
        "resourcesRequired",
        "timelineTarget",
        "communicationPlan",
        "contingencyMeasures"
      ]
    },
    "public_communications": {
      "description": "All public-facing messages and media coordination",
      "example_fields": [
        "messageId",
        "eventId",
        "messageType",
        "content",
        "language",
        "channels",
        "targetAudience",
        "urgencyLevel",
        "issuedBy",
        "approvedBy",
        "timestamp",
        "reach",
        "engagement",
        "translations"
      ]
    }
  },
  "subcollections": {
    "events/{eventId}/timeline": "Chronological event log",
    "events/{eventId}/actions": "Response actions and tasks",
    "events/{eventId}/resource_assignments": "Resource deployment tracking",
    "events/{eventId}/evacuees": "Individual evacuee tracking",
    "events/{eventId}/damage_assessment": "Infrastructure and property damage",
    "events/{eventId}/media_updates": "Press releases and media coordination",
    "authorities/{authorityId}/personnel": "Staff assignments and availability",
    "authorities/{authorityId}/equipment": "Equipment inventory and status",
    "resources/{resourceId}/deployment_history": "Historical deployment data",
    "infrastructure/{infraId}/monitoring": "Real-time infrastructure status"
  }
}